<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <shape xmlns:android="http://schemas.android.com/apk/res/android">

        <!-- Background color of the EditText -->
        <solid android:color="#FFFFFF" />

        <!-- Corner radius to make the rectangle rounded -->
        <corners android:radius="10dp" />

        <!-- Border width and color (Stroke) -->
        <stroke
            android:width="2dp"
            android:color="#EDF2F2" />

        <!-- Optional padding within the shape -->
        <padding
            android:left="10dp"
            android:top="10dp"
            android:right="10dp"
            android:bottom="10dp" />

    </shape>
</selector>